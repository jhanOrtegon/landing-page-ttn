<script is:inline>
  const text = "Transformando el sector de la salud";

  async function typeText(target) {
    for (let i = 0; i < text.length; i++) {
      target.textContent += text.charAt(i);
      await new Promise((r) => setTimeout(r, 50));
    }
  }

  async function deleteText(target) {
    for (let i = text.length; i >= 0; i--) {
      target.textContent = text.substring(0, i);
      await new Promise((r) => setTimeout(r, 30));
    }
  }

  async function startTypewriterLoop() {
    const target = document.getElementById("typewriter-text");
    if (!target) return;

    while (true) {
      target.textContent = "";
      await typeText(target);
      await new Promise((r) => setTimeout(r, 8000)); // espera después de escribir
      await deleteText(target);
      await new Promise((r) => setTimeout(r, 500)); // pausa antes de repetir
    }
  }

  const init = () => {
    const target = document.getElementById("typewriter-text");
    if (!target || target.dataset.animated === "true") return;
    target.dataset.animated = "true";
    startTypewriterLoop();
  };

  if (document.readyState === "complete") init();
  else window.addEventListener("DOMContentLoaded", init);

  document.addEventListener("astro:after-swap", () => {
    init();
  });
</script>
