---
import { seed } from "../../seed/seed";
---

<section
  id="process-center"
  class="relative bg-[#e3f5ff] text-accent-500 overflow-hidden"
>
  <!-- üåä Curva superior -->
  <div class="absolute top-0 left-0 w-full rotate-180">
    <svg class="w-full h-24" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,0 C300,100 900,0 1200,100 L1200,0 L0,0 Z" fill="#e3f5ff"
      ></path>
    </svg>
  </div>

  <!-- üß† Contenido principal -->
  <div class="relative z-10 max-w-6xl mx-auto px-6 py-24">
    <!-- T√≠tulo principal -->
    <h2 class="text-3xl md:text-4xl font-bold text-center text-accent-500">
      Centraliza todos <br />
      los <span class="text-primary-500">procesos</span> de tu empresa
    </h2>

    <!-- Cuadro de procesos -->
    <div class="mt-12 flex flex-wrap justify-center gap-8">
      {
        seed.home.proccess.data.map((process) => (
          <div class="w-52 h-48 bg-white/80 backdrop-blur-md shadow-md rounded-xl flex flex-col items-center justify-center hover:scale-105 transition-all duration-200">
            <div class="text-3xl">{process.icon}</div>
            <span class="mt-4 text-[#009dff] font-semibold">
              {process.title}
            </span>
          </div>
        ))
      }
    </div>

    <!-- Punto decorativo -->
    <div class="mt-6">
      <div class="w-2 h-2 bg-[#009dff] rounded-full mx-auto"></div>
    </div>

    <!-- T√≠tulo secundario -->
    <h3 class="mt-24 text-2xl md:text-3xl font-bold text-center leading-tight">
      Queremos aportar al mundo <br />
      con nuestro <span class="text-[#009dff]">servicio</span>
    </h3>

    <!-- Estad√≠sticas -->
    <div class="mt-12 flex flex-wrap justify-center gap-6">
      <!-- Usuario -->
      <div
        class="bg-white/80 backdrop-blur-md border border-[#009dff] rounded-xl px-6 py-5 w-72 flex items-center gap-4 shadow-sm"
      >
        <div
          class="w-12 h-12 bg-[#009dff] rounded-full flex items-center justify-center"
        >
          <svg
            class="w-6 h-6 text-white"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M5.121 17.804A10.001 10.001 0 0112 15c2.084 0 4.007.636 5.597 1.72M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            ></path>
          </svg>
        </div>
        <div>
          <div class="text-[#009dff] text-xl font-bold">+400.000</div>
          <div class="text-sm font-medium">Usuarios registrados</div>
        </div>
      </div>

      <!-- Engranaje -->
      <div
        class="bg-white/80 backdrop-blur-md border border-[#009dff] rounded-xl px-6 py-5 w-72 flex items-center gap-4 shadow-sm"
      >
        <div
          class="w-12 h-12 bg-[#009dff] rounded-full flex items-center justify-center"
        >
          <svg
            class="w-6 h-6 text-white"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M11.049 2.927c.3-.921 1.603-.921 1.902 0a1.724 1.724 0 002.592.949c.811-.586 1.965.232 1.601 1.146a1.724 1.724 0 002.077 2.077c.914-.364 1.732.79 1.146 1.6a1.724 1.724 0 00.949 2.593c.92.3.92 1.602 0 1.902a1.724 1.724 0 00-.949 2.592c.586.811-.232 1.965-1.146 1.601a1.724 1.724 0 00-2.077 2.077c.364.914-.79 1.732-1.601 1.146a1.724 1.724 0 00-2.592.949c-.3.92-1.602.92-1.902 0a1.724 1.724 0 00-2.593-.949c-.811.586-1.965-.232-1.6-1.146a1.724 1.724 0 00-2.077-2.077c-.914.364-1.732-.79-1.146-1.601a1.724 1.724 0 00-.949-2.592c-.92-.3-.92-1.602 0-1.902a1.724 1.724 0 00.949-2.593c-.586-.811.232-1.965 1.146-1.6a1.724 1.724 0 002.077-2.077c-.364-.914.79-1.732 1.6-1.146a1.724 1.724 0 002.593-.949z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <div>
          <div class="text-[#009dff] text-xl font-bold">+100</div>
          <div class="text-sm font-medium">Operaciones automatizadas</div>
        </div>
      </div>

      <!-- Cohete -->
      <div
        class="bg-white/80 backdrop-blur-md border border-[#009dff] rounded-xl px-6 py-5 w-72 flex items-center gap-4 shadow-sm"
      >
        <div
          class="w-12 h-12 bg-[#009dff] rounded-full flex items-center justify-center"
        >
          <svg
            class="w-6 h-6 text-white"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M5 13l4 4L19 7M15 7h2a2 2 0 012 2v2m-1 5v3a2 2 0 01-2 2h-3m-4 0H7a2 2 0 01-2-2v-3m0-4V9a2 2 0 012-2h3"
            ></path>
          </svg>
        </div>
        <div>
          <div class="text-[#009dff] text-xl font-bold">+500.000</div>
          <div class="text-sm font-medium">Movimientos al d√≠a</div>
        </div>
      </div>
    </div>
  </div>

  <!-- üåä Curva inferior -->
  <div class="absolute"></div>
</section>
