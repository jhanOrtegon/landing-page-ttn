---
import { seed } from "../../seed/seed";
const { t } = Astro.props;
---

<section
  id="process-center"
  class="relative bg-[#e3f5ff] text-accent-500 overflow-hidden"
>
  <!-- ðŸŒŠ Curva superior -->
  <div class="absolute top-0 left-0 w-full rotate-180">
    <svg class="w-full h-24" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,0 C300,100 900,0 1200,100 L1200,0 L0,0 Z" fill="#e3f5ff"
      ></path>
    </svg>
  </div>

  <!-- ðŸ§  Contenido principal -->
  <div class="relative z-10 max-w-6xl mx-auto px-6 py-24">
    <!-- TÃ­tulo principal -->
    <h2 class="text-3xl md:text-4xl font-bold text-center text-accent-500">
      {t.process.titleTop}
      <br />
      <span class="text-primary-500">{t.process.titleBottom}</span>
    </h2>

    <!-- Cuadro de procesos -->
    <div class="mt-12 flex flex-wrap justify-center gap-8">
      {
        t.process.data.map((process: any) => (
          <div class="w-52 h-48 bg-white/80 backdrop-blur-md shadow-md rounded-xl flex flex-col items-center justify-center hover:scale-105 transition-all duration-200">
            <div class="text-3xl">{process.icon}</div>
            <span class="mt-4 text-[#009dff] font-semibold">
              {process.title}
            </span>
          </div>
        ))
      }
    </div>

    <!-- Punto decorativo -->
    <div class="mt-6">
      <div class="w-2 h-2 bg-[#009dff] rounded-full mx-auto"></div>
    </div>

    <!-- TÃ­tulo secundario -->
    <h3 class="mt-24 text-2xl md:text-3xl font-bold text-center leading-tight">
      {t.process.subtitleTop}
      <br />
      <span class="text-[#009dff]">{t.process.subtitleBottom}</span>
    </h3>

    <!-- EstadÃ­sticas -->
    <div class="mt-12 flex flex-wrap justify-center gap-6">
      {
        t.process.stats.map((stat: any) => (
          <div class="bg-white/80 backdrop-blur-md border border-[#009dff] rounded-xl px-6 py-5 w-72 flex items-center gap-4 shadow-sm">
            <div class="w-12 h-12 bg-[#009dff] rounded-full flex items-center justify-center">
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M5.121 17.804A10.001 10.001 0 0112 15c2.084 0 4.007.636 5.597 1.72M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                />
              </svg>
            </div>
            <div>
              <div class="text-[#009dff] text-xl font-bold">{stat.value}</div>
              <div class="text-sm font-medium">{stat.label}</div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
