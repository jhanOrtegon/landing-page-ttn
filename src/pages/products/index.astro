---

<Layout title="Productos - TTN Company">
  <Header />
  <main>
    <HeroSection
      img="/banner-products.jpg"
      title="Nuestro trabajo"
      description="Conoce como potencializar tu proyecto con nuestros servicios y soluciones"
    />

    <section class="py-16 bg-white dark:bg-gray-800">
      <div class="container-custom">
        <div class="mb-24">
          <div class="grid gap-12 mb-12">
            {
              products.map((product, index) => (
                <div class="grid md:grid-cols-2 gap-12 items-center mb-12">
                  {index % 2 === 0 ? (
                    <>
                      {/* Contenido primero */}
                      <div>
                        <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
                          {product.category}
                        </span>
                        <h2 class="text-3xl font-bold text-accent-500 dark:text-white mb-4">
                          {product.highlight}
                        </h2>
                        <p class="text-accent-500 dark:text-gray-300 mb-6">
                          {product.description}
                        </p>
                        <div class="flex flex-wrap gap-4 mb-6">
                          {product.subservices.map((subservice, i) => (
                            <div class="flex items-center">
                              <svg
                                class="w-5 h-5 text-primary-600 dark:text-primary-400 mr-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                              >
                                <path
                                  stroke-width="2"
                                  stroke-linejoin="round"
                                  d="M5 13l4 4L19 7"
                                />
                              </svg>
                              <span class="text-gray-700 dark:text-gray-300">
                                {subservice}
                              </span>
                            </div>
                          ))}
                        </div>
                        <a
                          href={`/products/${product.slug}`}
                          class="btn-primary"
                        >
                          Conoce más
                        </a>
                      </div>
                      {/* Imagen */}
                      <div
                        class={`rounded-lg overflow-hidden flex flex-col ${product.slug === "biowel" ? "gap-8" : ""}`}
                      >
                        <img
                          alt={product.alt}
                          src={product.imageTitle}
                          class="w-1/2 h-8 m-auto"
                        />
                        <img
                          src={product.image}
                          alt={product.alt}
                          class="w-full h-full"
                        />
                      </div>
                    </>
                  ) : (
                    <>
                      {/* Imagen primero */}
                      <div
                        class={`rounded-lg overflow-hidden flex flex-col ${product.slug === "biowel" ? "gap-8" : ""}`}
                      >
                        <img
                          alt={product.alt}
                          src={product.imageTitle}
                          class="w-1/2 h-8 m-auto"
                        />
                        <img
                          src={product.image}
                          alt={product.alt}
                          class="w-full h-full"
                        />
                      </div>

                      {/* Contenido */}
                      <div>
                        <span class="inline-block px-4 py-1 rounded-full bg-primary-100 dark:bg-primary-900 text-primary-600 dark:text-primary-300 font-medium text-sm mb-4">
                          {product.category}
                        </span>
                        <h2 class="text-3xl font-bold text-accent-500 dark:text-white mb-4">
                          {product.highlight}
                        </h2>
                        <p class="text-accent-500 dark:text-gray-300 mb-6">
                          {product.description}
                        </p>
                        <div class="flex flex-wrap gap-4 mb-6">
