---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import HeroSection from "../../components/HeroSection.astro";
import ContactForm from "../../components/ContactForm";
import ToastProvider from "../../components/ToastProvider";
import { getTranslation } from "../../i18n";

const pathname = Astro.url.pathname;
const t = getTranslation(pathname);
---

<Layout
  title={t.contact.layout.title}
  description={t.contact.layout.description}
>
  <Header t={t} />
  <main>
    <HeroSection
      tags={["contact"]}
      title={t.contact.heroSection.title}
      description={t.contact.heroSection.description}
    />
    <ContactForm client:load t={t.contact.contactSection} />
    <ToastProvider client:only="react" />
  </main>
  <Footer t={t} />
</Layout>
